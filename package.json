{
  "name": "@nathanielgraham/cron-toolkit-ts",
  "version": "1.0.4",
  "description": "TypeScript port of Perl's Cron::Toolkit",
  "dependencies": {
    "@types/luxon": "^3.7.1",
    "luxon": "^3.7.2"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "build:demo": "tsup src/demo/app.ts --format iife --global-name=CronDemo --out-dir docs --entry.app=src/demo/app.ts",
    "dev": "npm run build:demo -- --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cron",
    "scheduler",
    "quartz",
    "parser",
    "timezone",
    "dst",
    "leap-year",
    "l",
    "w",
    "nth-weekday",
    "wrapped-ranges",
    "perl-port"
  ],
  "author": "Nathaniel Graham[](https://github.com/nathanielgraham)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nathanielgraham/cron-toolkit-ts.git"
  },
  "bugs": {
    "url": "https://github.com/nathanielgraham/cron-toolkit-ts/issues"
  },
  "homepage": "https://nathanielgraham.github.io/cron-toolkit-ts",
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "luxon": "^3.7.2",
    "tsup": "^8.5.1",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
